            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameTxt" promptText="Please enter your name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="genderTxt" promptText="Please enter your gender" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
