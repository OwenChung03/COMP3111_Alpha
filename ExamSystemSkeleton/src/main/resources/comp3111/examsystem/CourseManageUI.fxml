<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp3111.examsystem.controller.CourseManageController">
    <HBox spacing="10.0" alignment="CENTER" padding="10.0">
        <Label text="Course ID:" />
        <TextField fx:id="courseIdFilter" prefWidth="150.0" />
        <Label text="Course Name:" />
        <TextField fx:id="courseNameFilter" prefWidth="150.0" />
        <Label text="Department:" />
        <TextField fx:id="departmentFilter" prefWidth="150.0" />
        <Button text="Filter" onAction="#filterCourses" />
        <Button text="Reset" onAction="#resetFilters" />
    </HBox>
    <TableView fx:id="courseTable" prefHeight="400.0">
        <columns>
            <TableColumn fx:id="courseIdColumn" text="Course ID" prefWidth="100.0" />
            <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="200.0" />
            <TableColumn fx:id="departmentColumn" text="Department" prefWidth="150.0" />
        </columns>
    </TableView>
    <HBox spacing="10.0" alignment="CENTER" padding="10.0">
        <Label text="Course ID:" />
        <TextField fx:id="newCourseId" prefWidth="150.0" />
        <Label text="Course Name:" />
        <TextField fx:id="newCourseName" prefWidth="150.0" />
        <Label text="Department:" />
        <TextField fx:id="newDepartment" prefWidth="150.0" />
        <Button text="Add" onAction="#addCourse" />
        <Button text="Update" onAction="#updateCourse" />
        <Button text="Delete" onAction="#deleteCourse" />
        <Button text="Refresh" onAction="#refreshCourses" />
    </HBox>
</VBox>