<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="533.0" prefWidth="614.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp3111.examsystem.controller.QuizScreenController">

    <!-- Quiz title -->
    <Label fx:id="quizTitleLabel" layoutX="200.0" layoutY="20.0" text="Quiz Title" />

    <!-- Total number of questions -->
    <Label fx:id="totalQuestionsLabel" layoutX="200.0" layoutY="50.0" text="Total Questions: 0" />

    <!-- Timer for the quiz -->
    <Label fx:id="timerLabel" layoutX="400.0" layoutY="50.0" text="Remaining Time: 0" />

    <!-- List of questions on the left side -->
    <ListView fx:id="questionsListView" layoutX="20.0" layoutY="100.0" prefWidth="150.0" />

    <!-- Question label -->
    <Label fx:id="questionLabel" layoutX="200.0" layoutY="100.0" text="Question" />

    <!-- Radio buttons for multiple choice answers -->
    <RadioButton fx:id="optionA" layoutX="200.0" layoutY="300.0" text="Option A" />
    <RadioButton fx:id="optionB" layoutX="200.0" layoutY="330.0" text="Option B" />
    <RadioButton fx:id="optionC" layoutX="200.0" layoutY="360.0" text="Option C" />
    <RadioButton fx:id="optionD" layoutX="200.0" layoutY="390.0" text="Option D" />

    <!-- Navigation buttons -->
    <Button fx:id="nextButton" layoutX="336.0" layoutY="460.0" onAction="#nextQuestion" text="Next" />
    <Button fx:id="prevButton" layoutX="236.0" layoutY="460.0" onAction="#prevQuestion" text="Previous" />
    <Button fx:id="submitButton" layoutX="436.0" layoutY="460.0" onAction="#submitQuiz" text="Submit" />

</AnchorPane>
